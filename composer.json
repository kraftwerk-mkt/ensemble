{
  "name": "kraftwerk/ensemble",
  "description": "Professional Event Management Plugin for WordPress",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Fabian",
      "homepage": "https://kraftwerk-mkt.com"
    }
  ],
  "homepage": "https://kraftwerk-mkt.com/ensemble",
  "support": {
    "issues": "https://kraftwerk-mkt.com/support"
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "phpcs:summary": "phpcs --report=summary",
    "lint": "@phpcs",
    "fix": "@phpcbf"
  },
  "scripts-descriptions": {
    "phpcs": "Run PHP CodeSniffer to check coding standards",
    "phpcbf": "Run PHP Code Beautifier to auto-fix issues",
    "phpcs:summary": "Show summary of coding standard violations",
    "lint": "Alias for phpcs",
    "fix": "Alias for phpcbf"
  }
}
